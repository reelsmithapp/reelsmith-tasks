{
  "name": "reelsmith-tasks",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "Full-stack task management system for ReelSmith - tracking marketing, development, and strategic initiatives with persistent database",
  "keywords": ["task-management", "reelsmith", "film-production", "react", "typescript", "hono", "postgresql"],
  "author": "ReelSmith Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reelsmithapp/reelsmith-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/reelsmithapp/reelsmith-tasks/issues"
  },
  "homepage": "https://github.com/reelsmithapp/reelsmith-tasks#readme",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "tsc && vite build",
    "build:api": "tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "cli": "tsx cli.ts",
    "keygen": "node scripts/generate-api-key.js"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@hono/node-server": "^1.13.7",
    "@neondatabase/serverless": "^0.10.4",
    "commander": "^12.1.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "hono": "^4.7.10",
    "postgres": "^3.4.5",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.2.55",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.29.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  }
}
